<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true">

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
      <providers>
        <!-- provides the fields in the configured pattern -->
        <pattern>
          <!-- the pattern that defines what to include -->
          <pattern>
            {
            "timestamp": "%date{ISO8601}",
            "logger": "%logger",
            "level": "%level",
            "thread": "%thread",
            "message": "%message",
            "method": "%method"
            }
          </pattern>
        </pattern>

        <!--Includes a stack trace if a throwable was provided -->
        <stackTrace>
          <throwableConverter class="ch.qos.logback.classic.pattern.ThrowableProxyConverter"/>
        </stackTrace>

        <!-- Includes the provided markers in the log output if available -->
        <logstashMarkers/>
      </providers>
    </encoder>
  </appender>
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${HOME}/log/fs/app.json</file>

    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${HOME}/log/fs/app.json.%d{yyyy-MM-dd_HH}</fileNamePattern>
      <maxHistory>2</maxHistory>
    </rollingPolicy>

    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
      <providers>
        <!-- provides the fields in the configured pattern -->
        <pattern>
          <!-- the pattern that defines what to include -->
          <pattern>
            {
            "timestamp": "%date{ISO8601}",
            "logger": "%logger",
            "level": "%level",
            "thread": "%thread",
            "message": "%message",
            "method": "%method"
            }
          </pattern>
        </pattern>

        <!--Includes a stack trace if a throwable was provided -->
        <stackTrace>
          <throwableConverter class="ch.qos.logback.classic.pattern.ThrowableProxyConverter"/>
        </stackTrace>

        <!-- Includes the provided markers in the log output if available -->
        <logstashMarkers/>
      </providers>
    </encoder>
  </appender>

  <logger name="org.familysearch">
    <level value="INFO"/>
  </logger>

  <root level="DEBUG">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="FILE"/>
  </root>

</configuration>
